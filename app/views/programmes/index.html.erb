<p id="notice"><%= notice %></p>

<%= will_paginate %>

<h1>Programmes</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Date de début</th>
      <th>Date de fin</th>
      <th>Responsable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programmes.each do |programme| %>
      <tr>
        <td><%= programme.titre %></td>
        <td><%= I18n.l programme.date_debut unless programme.date_debut.nil? %></td>
        <td><%= I18n.l programme.date_fin unless programme.date_fin.nil? %></td>
    
        <td><%=  programme.responsable %></td>
        <td><%= link_to 'Voir', programme, class: "ui button mini label green" %></td>
        <td><%= link_to 'Modifier', edit_programme_path(programme), class: "ui button mini label orange" %></td>
        <td><%= link_to 'Supprimer', programme, method: :delete, data: { confirm: 'Etes-vous sûr ?' }, class: "ui button mini label red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br/>

<%= link_to 'Créer un nouveau programme', new_programme_path, class: "ui button blue" %>
