<table class="ui celled table">
  <thead><tr><th colspan="2"><label>Compte rendu de séance <%= @compterendu.dmsession.programme.titre %></label></th></tr></thead>
  <tbody>
    <tr><th>Identifiant du groupe</th><td><%= @compterendu.dmsession.titre %></td></tr>
    <tr><th>Date</th><td><%= I18n.l Time.now %></td></tr>
    <tr><th>Modérateur</th><td><%= @moderateurs %></td></tr>
    <tr><th>Secrétaire</th><td><%= @secretaires %></label></tr>
  </tbody>
</table>

