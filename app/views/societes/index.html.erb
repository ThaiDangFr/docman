<h1>Sociétés</h1>

<%= will_paginate %>

<table>
  <thead>
    <tr>
      <th>Raison sociale</th>
      <th>Adresse</th>
      <th>Code postal</th>
      <th>Ville</th>
      <th>Téléphone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @societes.each do |societe| %>
      <tr>
        <td><%= societe.raison_sociale %></td>
        <td><%= societe.adresse %></td>
        <td><%= societe.code_postal %></td>
        <td><%= societe.ville %></td>
        <td><%= societe.telephone %></td>
        <td><%= link_to 'Voir', societe, class: "ui button mini label green" %></td>
        <td><%= link_to 'Modifier', edit_societe_path(societe), class: "ui button mini label orange" %></td>
        <td><%= link_to 'Supprimer', societe, method: :delete, data: { confirm: 'Etes vous sûr ?' }, class: "ui button mini label red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br/>

<%= link_to 'Créer une nouvelle société', new_societe_path, class: "ui button blue" %>
