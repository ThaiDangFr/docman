<h1>Documents personnels</h1>

<%= will_paginate %>

<% #if not @current_user.storage.empty? %>
<% if not @storage.empty? %>
<table>
	<thead>
		<tr>
			<th>Fichier</th>
		</tr>
	</thead>

	<tbody>
		<% #@current_user.storage.each do |p| %>
		<% @storage.each_with_index do |p,i| %>
		<tr>
			<td>
				<%= link_to "#{p.path.split('/').last}", p.url, target: "_blank" %>
				<%= link_to "(supprimer)", send("storage_path",@storage.offset + i), :method => :delete, data: {confirm: "Etes-vous certain de supprimer ?" } %><br/>

			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<% else %>
Aucun
<% end %>

<%= will_paginate %>

<br/>
<%= link_to 'Ajouter des fichiers', storage_add_path,class: "ui button blue" %>