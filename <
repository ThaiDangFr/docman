<%= form_for(programme) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :titre %>
    <%= f.text_field :titre %>
  </div>

  <div class="field">
    <%= f.label :date_debut, "Date de dÃ©but" %>
    <%= f.datetime_select :date_debut %>
  </div>

  <div class="field">
    <%= f.label :date_fin, "Date de fin" %>
    <%= f.datetime_select :date_fin %>
  </div>

  <div class="field">
    <%= f.label :responsable_id %>
    <%= f.select :responsable_id, User.all.collect { |p| [p.nom+" "+p.prenom, p.id]} %>
  </div>

  <div class="actions">
    <%= f.submit "Enregistrer" %>
  </div>
<% end %>
